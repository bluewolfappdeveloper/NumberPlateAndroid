<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <com.google.android.material.tabs.TabLayout
       android:id="@+id/tabLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:ignore="MissingConstraints">

       <com.google.android.material.tabs.TabItem
           android:id="@+id/imageDetectionTab"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:icon="@drawable/ic_image"
           android:text="@string/tabImageDetection"></com.google.android.material.tabs.TabItem>

       <com.google.android.material.tabs.TabItem
           android:id="@+id/cameraDetectionTab"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:icon="@drawable/ic_camera"
           android:text="@string/tabCameraDetection"></com.google.android.material.tabs.TabItem>
   </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:layout_marginTop="10dp">
    </FrameLayout>

</RelativeLayout>